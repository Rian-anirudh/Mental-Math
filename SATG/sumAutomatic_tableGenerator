import numpy as np
import pandas as pd

def quants_apt(y):
	arr = np.random.randint(100, size=(2,y))
	sol = np.append(0,arr[0])
	sol = np.append(sol,0)
	for i in range(y):
		inter = arr[1][i] + arr[0]
		add   = np.sum(inter)
		inter = np.append(arr[1][i],inter)
		inter = np.append(inter, add)
		sol = np.vstack([sol,inter])
	c_sum = np.sum(sol, axis=0)
	sol = np.vstack([sol,c_sum])
	return sol

				

